// get a number and decimal number and character andprint it on console
#include<stdio.h>
int  getANumberFromUser(){
    int i;
    printf("enter a number ");
    scanf("%d",&i);
    return i;
}
char getACharacterFromUser(){
    char k;
    printf("enter a character ");
    scanf("%c",&k);
    return k;
}
void main (){
    int number1 = getANumberFromUser();
    int number2 = getANumberFromUser();
    char chr = getACharacterFromUser();
    printf("number is %d,%d",number1,number2);
    printf("character is %c",chr);
}
