// get a number and decimal number and character andprint it on console
#include<stdio.h>
int  getANumberFromUser(){
    int i;
    printf("enter a number");
    scanf("%d",&i);
    return i;
}
float getAFloatNumberFromUser(){
    float j;
    printf("enter a decimal");
    scanf("%f",&j);
    return j;
}
char getACharacterFromUser(){
    char k;
    printf("enter a character");
    scanf("%c",&k);
    return k;
}
void main (){
    int number = getANumberFromUser();
    float decimal = getAFloatNumberFromUser();
    char chr = getACharacterFromUser();
    printf("number is %d",number);
    printf("number is %f",decimal);
    printf("character is %c",chr);
}
